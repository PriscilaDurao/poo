package br.com.residencia.poo.balanco;


public class BalancoTrimestral {

	public static double somaTrimestral () {
		return gastosTrimestreUm + gastosTrimestreDois + gastosTrimestreTres + gastosTrimestreQuatro;
		
	}
	public static void main(String[] args) {
		
		double gastosJaneiro = 15000;
		double gastosFevereiro = 23000;
		double gastosMarco = 17000;
		double gastosAbril = 0, gastosMaio = 0, gastosJunho = 0, gastosJulho = 0, gastosAgosto = 0, gastosSetembro = 0, gastosOutubro = 0, gastosNovembro = 0,  gastosDezembro = 0;
		double gastosTrimestreUm = (gastosJaneiro + gastosFevereiro + gastosMarco);
		double gastosTrimestreDois = (gastosAbril + gastosMaio + gastosJunho);
		double gastosTrimestreTres = (gastosJulho + gastosAgosto + gastosSetembro);
		double gastosTrimestreQuatro = (gastosOutubro + gastosNovembro + gastosDezembro);
		
	
		System.out.println("Seu gasto trimestral é " + gastosTrimestreUm + ".");

		System.out.println("Seu saldo trimestral é " + somaTrimestral());
	}

	
	
}
