package br.com.residencia.poo.aula1; {
import java.util.Scanner;

public class teste.java{
	
	public static void main(String [] args) {
		Scanner MA = new Scanner(System.in);
float nota, totalNotas =0.0f, media =0.0f;
		String disciplina, nome;
		
		System.out.println("Digite o nome: ");
		nome = MA.nextLine();
		
		System.out.println("Digite a disciplina:");
		disciplina = MA.nextLine();
		
		for (int cont = 1; cont <=3; cont++); {
			int cont;
			System.out.println("Digite a nota " + cont + " nota: ");
			nota = MA.nextFloat();
			totalNotas = (nota + totalNotas);
		}
	}
		media = totalNotas / 3;
		System.out.println("OlÃ¡, " + nome + " !");
		System.out.println("Na disciplina " + disciplina + "sua media foi: " + media + " !");
				
}
}